<Page x:Class="Practik.Page_WareHouse.Location"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practik.Page_WareHouse"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Location">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="74*"/>
            <RowDefinition Height="190*"/>
            <RowDefinition Height="191*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
        </Grid>
        <DataGrid x:Name="DGPrCrud" AutoGenerateColumns="False" SelectionChanged="DGPrCrud_SelectionChanged" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding ID_ProductLocation}" Header="ID"/>
                <DataGridTextColumn Binding="{Binding Section}" Header="Секция"/>
                <DataGridTextColumn Binding="{Binding Shelf}" Header="Стеллаж"/>
                <DataGridTextColumn Binding="{Binding Rack}" Header="Полка"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="21*"/>
                <ColumnDefinition Width="79*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Button x:Name="Create" Click="Create_Click" Width="130" Height="30" FontSize="20" >Добавить</Button>
                <Button Grid.Row="1" x:Name="Update" Click="Update_Click" Width="130" Height="30" FontSize="20" >Изменить</Button>
                <Button Grid.Row="2" x:Name="Delete" Click="Delete_Click" Width="130" Height="30" FontSize="20" >Удалить</Button>
            </Grid>
            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <TextBox x:Name="Section" Grid.Row="0" Grid.Column="0" Width="200" Height="30" Text="Секция"/>
                <TextBox x:Name="Shelf" Grid.Row="1" Grid.Column="0" Width="200" Height="30" Text="Стеллаж"/>
                <TextBox x:Name="Rack" Grid.Row="0" Grid.Column="1" Width="200" Height="30" Text="Полка"/>
            </Grid>
        </Grid>
    </Grid>
</Page>
    
